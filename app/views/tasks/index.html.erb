<div class="container">

  <h2>My Tasks</h2>

   <ul id = "tasks">

    <%@tasks.each do |task|  %>
     <li>
       <% if task.completed %>
         <i class="far fa-check-square"></i>
       <% else %>
         <i class="far fa-square"></i>
       <% end %>

       <%=link_to task.title,task_path(task)%>

       <%= link_to task_path(task), method: :delete, data: { confirm: "Delete #{task.title}?" } do %>
       <i class="far fa-trash-alt"></i>
     </li>
         <% end %>

     <br>
     <%end %>
     <br>
   </ul>

    <%= link_to new_task_path do %>
    <i class="fa fa-plus"></i> Add a new task
    <% end %>

  </div>

